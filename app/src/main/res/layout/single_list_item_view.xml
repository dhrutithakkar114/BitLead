<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    >

    <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#FFFFFF"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="0dp"
                android:textSize="18dp"
                android:text="Name"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                >
            </TextView>

            <TextView
                android:id="@+id/label1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:padding="0dp"
                android:textSize="12dp"
                android:text="Contact No. | Email | Interest | Enquiry No. | Status"
                android:layout_below="@id/label"
                android:layout_marginLeft="15dp"
                android:textColor="#000000">
            </TextView>

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#EFEFEF"
        android:paddingTop="10dp"
        android:layout_below="@+id/rel1">

        <TextView
            android:id="@+id/label3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:text="Current Action Plan"
            android:textColor="#000000">
        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/rel2"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/label4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:padding="0dp"
            android:textSize="12dp"
            android:text="Date and Time:"
            android:layout_marginLeft="15dp"
            android:textColor="#000000">
        </TextView>

        <TextView
            android:id="@+id/label7"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:padding="0dp"
            android:textSize="12dp"
            android:text="Today's Date and Time"
            android:layout_marginLeft="150dp"
            android:textColor="#000000">
        </TextView>

        <TextView
            android:id="@+id/label5"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:padding="0dp"
            android:textSize="12dp"
            android:text="Action:"
            android:layout_below="@id/label4"
            android:layout_marginLeft="15dp"
            android:textColor="#000000">
        </TextView>

        <TextView
            android:id="@+id/label8"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:padding="0dp"
            android:textSize="12dp"
            android:text="Action"
            android:layout_marginLeft="150dp"
            android:layout_below="@id/label7"
            android:textColor="#000000">
        </TextView>

        <TextView
            android:id="@+id/label6"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:padding="0dp"
            android:textSize="12dp"
            android:text="Enquiry Stage:"
            android:layout_below="@id/label5"
            android:layout_marginLeft="15dp"
            android:textColor="#000000">
        </TextView>

        <TextView
            android:id="@+id/label9"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:padding="0dp"
            android:textSize="12dp"
            android:text="Stage of Enquiry"
            android:layout_marginLeft="150dp"
            android:layout_below="@id/label8"
            android:textColor="#000000">
        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#EFEFEF"
        android:paddingTop="10dp"
        android:layout_below="@+id/rel3">

        <TextView
            android:id="@+id/label10"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:text="Action Taken"
            android:textColor="#000000">
        </TextView>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel5"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_alignParentStart="true"
        android:background="#FFFFFF"
        android:layout_below="@+id/rel4"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/label11"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:padding="0dp"
            android:text="Status:"
            android:textColor="#000000"
            android:textSize="12dp"></TextView>

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/spinner_background" />


        <TextView
            android:id="@+id/label12"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/spinner2"
            android:layout_marginLeft="15dp"
            android:padding="0dp"
            android:text="Action:"
            android:textColor="#000000"
            android:textSize="12dp"></TextView>

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_below="@+id/label11"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/spinner_background" />

        <TextView
            android:id="@+id/label13"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/spinner2"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="-48dp"
            android:padding="0dp"
            android:text="Enquiry Stage:"
            android:textColor="#000000"
            android:textSize="12dp"></TextView>

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_below="@+id/label11"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="69dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/spinner_background" />

        <TextView
            android:id="@+id/label14"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/spinner2"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="-92dp"
            android:padding="0dp"
            android:text="Remarks:"
            android:textColor="#000000"
            android:textSize="12dp"></TextView>

        <EditText
            android:id="@+id/editText3"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/label14"
            android:layout_alignStart="@+id/spinner1"
            android:layout_marginStart="-1dp"
            android:ems="10"
            android:hint="Enter Remarks"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="13dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#EFEFEF"
        android:paddingTop="10dp"
        android:layout_below="@+id/rel5">

        <TextView
            android:id="@+id/label15"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:text="Next Action"
            android:textColor="#000000">
        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel7"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/rel6"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/label16"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:padding="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Date and Time:"
            android:textColor="#000000"
            android:textSize="12dp"></TextView>

        <EditText
            android:id="@+id/editText4"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/label16"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:ems="10"
            android:hint="dd/mm/yyyy  hh:mm"
            android:inputType="date"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/label17"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@id/label16"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:padding="0dp"
            android:text="Action:"
            android:textColor="#000000"
            android:textSize="12dp"></TextView>

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_below="@+id/label17"
            android:layout_alignStart="@+id/editText4"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-30dp"
            android:background="@drawable/spinner_background" />

        <TextView
            android:id="@+id/label18"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@id/label16"
            android:layout_alignStart="@+id/label16"
            android:layout_marginStart="0dp"
            android:layout_marginTop="70dp"
            android:padding="0dp"
            android:text="Enquiry Stage:"
            android:textColor="#000000"
            android:textSize="12dp"></TextView>

        <Spinner
            android:id="@+id/spinner5"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_below="@+id/label17"
            android:layout_alignStart="@+id/spinner4"
            android:layout_marginStart="0dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/spinner_background" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner5"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:background="@drawable/savebutton"
            android:text="Save"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="15dp">

        </Button>

    </RelativeLayout>

</RelativeLayout>
</ScrollView>
